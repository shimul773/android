<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Shops">


    <ImageView
        android:id="@+id/shops_cata_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shops_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/largefont"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/header_top_margin"
            android:layout_marginBottom="@dimen/header_bottom_margin"
            android:text="@string/app_name"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shops_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            />
    </LinearLayout>




</LinearLayout>